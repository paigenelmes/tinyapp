<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!---Display User Login Form if not logged in --->
    <% if(!user) { %>
    <form class="form-inline" action="/urls/login" method="POST">
      <div class="form-group mb-2">
        <input
          class="form-control"
          type="text"
          name="user"
          placeholder="Enter Your Username"
          style="width: 300px; margin: 1em"
        />
        <button type="submit" class="btn btn-light">Submit</button>
      </div>
    </form>
    <!---Display "Logged in as: user email" if logged in, and add logout form--->
    <% } else { %>
    <a class="nav-item nav-link">Logged in as: <%= user.email %></a>
    <form class="form-inline" action="/urls/logout" method="POST">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-light">Log Out</button>
      </div>
    </form>
    <% } %>
  </nav>
</header>